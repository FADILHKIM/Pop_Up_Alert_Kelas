<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="413dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp">

        <Button
            android:id="@+id/basicNotification"
            android:layout_width="204dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:backgroundTint="#FF5722"
            android:onClick="basicNotify"
            android:text="notifikasi" />

        <Button
            android:id="@+id/headsupNotification"
            android:layout_width="211dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:backgroundTint="#FF5722"
            android:onClick="headsUpNotify"
            android:text="pop up notif" />

        <Button
            android:id="@+id/expandableNotification"
            android:layout_width="213dp"
            android:layout_height="84dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FF5722"
            android:onClick="expandableNotify"
            android:text="Expandable notif" />
    </RelativeLayout>
</LinearLayout>